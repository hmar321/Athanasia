@model List<InformacionCompraView>
<div class="card bg-light p-4">
    <h2 class="text-primary">Metodos pago</h2>
    <hr />
    <h5>@ViewData["MENSAJE"]</h5>
    <div class="d-flex flex-wrap gap-3">
        @if (Model.Count==0)
        {
            <h5>No tienes métodos de pago</h5>
        }
        else
        {
            foreach (InformacionCompraView info in Model)
            {
                <div class="card bg-light" style="width: 18rem;">
                    <div class="card-body">
                        <div class="d-flex flex-wrap justify-content-between">
                            <h5 class="card-title">@info.Nombre</h5>
                            <a asp-controller="Usuario" asp-action="EliminarInformacionCompra" asp-route-idmetodopago="@info.IdInformacionCompra" class="btn btn-danger">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="25" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                </svg>
                            </a>
                        </div>
                        <h6 class="card-subtitle mb-2">Direccion: @info.Direccion</h6>
                        <h6 class="card-subtitle mb-2">Tipo: @info.MetodoPago</h6>
                        <p class="card-text">Indicaciones: @info.Indicaciones</p>
                    </div>
                </div>
            }
        }
    </div>
    <div class="mt-3">
        <a asp-controller="Usuario" asp-action="AddMetodoPago" class="btn btn-dark">Agregar metodo pago</a>
    </div>
</div>