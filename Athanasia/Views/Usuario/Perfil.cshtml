@{
    Usuario usuario = Context.Session.GetObject<Usuario>("USUARIO");
}


<div class="card bg-light">
    <h1>Perfil</h1>
    <img src="~/Images/Usuarios/@usuario.Imagen" class="rounded-circle" style="width:15rem;" />
    <h4>@Context.User.Identity.Name @usuario.Apellido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @usuario.Nombre
        </dd>
        <dt class="col-sm-2">
            Apellido
        </dt>
        <dd class="col-sm-10">
            @usuario.Apellido
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @usuario.Email
        </dd>

        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            @usuario.Imagen
        </dd>
    </dl>
</div>
