<div class="card bg-light">
    <h1>Perfil</h1>
    <img src="~/Images/Usuarios/@Context.User.FindFirst(ClaimTypes.UserData).Value" class="rounded-circle" style="width:15rem;" />
    <h4>@Context.User.Identity.Name @Context.User.FindFirst(ClaimTypes.Surname).Value</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Context.User.Identity.Name
        </dd>
        <dt class="col-sm-2">
            Apellido
        </dt>
        <dd class="col-sm-10">
            @Context.User.FindFirst(ClaimTypes.Surname).Value
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Context.User.FindFirst(ClaimTypes.Email).Value
        </dd>
    </dl>
</div>
