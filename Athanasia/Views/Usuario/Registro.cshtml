<div class="col-12 d-flex flex-column align-items-center p-5 bg-secondary" style="min-height:100%">
    <form method="post">
        <div class="card bg-dark d-flex flex-column align-items-center p-5" style="width:40rem;height:44rem;">
            <h1 class="text-light">Registro</h1>
            <div class="mb-3" style="width:28rem;">
                <label for="nombre" class="form-label text-light">Nombre:</label>
                <input type="text" class="form-control" name="nombre">
            </div>
            <div class="mb-3" style="width:28rem;">
                <label for="apellido" class="form-label text-light">Apellido:</label>
                <input type="text" class="form-control" name="apellido">
            </div>
            <div class="mb-3" style="width:28rem;">
                <label for="email" class="form-label text-light">Email:</label>
                <input type="email" class="form-control" name="email">
                <div class="form-text text-light">Nosotros nunca compartiremos su información con terceros.</div>
            </div>
            <div class="mb-3" style="width:28rem;">
                <label for="password" class="form-label text-light">Contraseña:</label>
                <input type="password" class="form-control" name="password">
            </div>
            <div class="mb-3" style="width:28rem;">
                <label for="password" class="form-label text-light">Repetir Contraseña:</label>
                <input type="password" class="form-control" name="password">
            </div>
            <div class="mb-3 form-check" style="width:28rem;">
                <input type="checkbox" class="form-check-input" name="terminos">
                <label class="form-check-label text-light" for="terminos">he leído los <a asp-controller="Usuario" asp-action="Terminos" class="link-light">terminos de uso</a> y estoy de acuerdo</label>
            </div>
            <div class="mb-3" style="width:28rem;">
                <button class="btn btn-primary">Registrarse</button>
            </div>
        </div>
    </form>
</div>