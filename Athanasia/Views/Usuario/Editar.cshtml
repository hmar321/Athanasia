@model Usuario

<div class="card bg-light p-5">
    <h1>Editar</h1>

    <h4>Usuario</h4>
    <hr />
    <div class="row">
        <div class="col-md-5">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="nombre" class="control-label">Nombre</label>
                    <input type="text" name="nombre" value="@Model.Nombre" class="form-control mb-3" />
                </div>
                <div class="form-group">
                    <label for="apellido" class="control-label">Apellido</label>
                    <input type="text" name="apellido" value="@Model.Apellido" class="form-control mb-3" />
                </div>
                <div class="form-group">
                    <label for="email" class="control-label">Email</label>
                    <input type="email" name="email" value="@Model.Email" class="form-control mb-3" />
                </div>
                <div class="form-group">
                    <label for="imagen" class="control-label">Imagen</label>
                    <input type="file" name="fichero" class="form-control mb-3" />
                </div>
                <div class="form-group d-flex flex-row justify-content-between">
                    <button class="btn btn-success">Guardar</button>
                    <a class="btn btn-dark link-light" asp-controller="Usuario" asp-action="Perfil">Volver a Perfil</a>
                </div>
            </form>
        </div>
    </div>
</div>