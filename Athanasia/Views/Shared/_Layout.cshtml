<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Athanasia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Athanasia.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: rgb(10,10,10);
        }
    </style>
    @await RenderSectionAsync("styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow" style="min-height:10vh;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Libro" asp-action="Index">Athanasia</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-evenly">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <partial name="_Menus" />
                    </ul>
                    <form asp-controller="Libro" asp-action="Index" method="post" class="d-flex gap-2">
                        <input type="text" name="buscador" class="form-control" />
                        <button class="btn btn-primary">Buscar</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row d-flex flex-column align-content-center p-5" style="min-height:83.5vh;">
            @RenderBody()
        </div>
    </div>

    <footer class="footer bg-dark text-muted" style="min-height:6vh;">
        <div class="container">
            &copy; 2024 - Athanasia
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("scripts", required: false)
</body>
</html>
