@model List<ProductoSimpleView>
@{
    List<int> idsproductos = memoryCache.Get<List<int>>("CARRITO");
    if (idsproductos == null)
    {
        idsproductos = new List<int>();
    }
}
<h2>@ViewData["MENSAJE"]</h2>
<div class="col-1"></div>
<div class="col-10 d-flex flex-wrap gap-3">
    @foreach (ProductoSimpleView libro in Model)
    {
        <div class="card" style="width:22rem">
            <img src="~/images/portadas/@libro.Portada" class="card-img-top" style="height:30rem;width:22rem;">
            <div class="card-body d-flex flex-column" style="height:9rem">
                <h5 class="card-title">@libro.Titulo</h5>
                <div class="d-flex justify-content-between mt-auto">
                    <h6 class="card-subtitle text-muted">@libro.Autor</h6>
                    <h6 class="card-subtitle">@libro.Precio€</h6>
                </div>
                <div class="d-flex justify-content-between mt-auto">
                    @if (idsproductos.Any(p => p == libro.IdProducto))
                    {
                        <span class="btn btn-success d-flex flex-column justify-content-center align-items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill="currentColor" class="bi bi-cart-check" viewBox="0 0 16 16">
                                <path d="M11.354 6.354a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0z" />
                                <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1zm3.915 10L3.102 4h10.796l-1.313 7zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0m7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                            </svg>
                        </span>
                    }
                    else
                    {
                        <a asp-controller="Libro" asp-action="Index" asp-route-idproducto="@libro.IdProducto" class="btn btn-secondary d-flex flex-column justify-content-center align-items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                            </svg>
                        </a>
                    }
                    <a asp-controller="Libro" asp-action="Detalles" asp-route-idproducto="@libro.IdProducto" class="btn btn-primary">Detalles</a>
                </div>
            </div>
        </div>
    }
</div>